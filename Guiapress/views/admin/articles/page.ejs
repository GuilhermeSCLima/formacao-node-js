<%- include ("../../partials/header.ejs")%>

  <body>
    <%- include ("../../partials/homenavbar") %>
      <div class="container">
        <hr>
        <% result.articles.rows.forEach(art=> { %>

          <div class="card-header">
            <h2>
              <%= art.title %>
            </h2>
          </div>
          <div class="card-body">
            <a href="/<%= art.slug %> " class="btn btn-success">Ler artigo</a>
          </div>
          <br>
          <% }) %>

          <div class="row">
            <div class="col col-12">
              <% if (result.page > 2) { %>
                <a style="float:left;" href="/articles/page/<%= result.page - 1 %> "><<<< prev</a>
                <% } else if (result.page == 2) { %>
                  <a style="float:left;" href="/"><<<< Prev</a>
              <% } %>

              <% if (result.next) { %>
                <a style="float:right;" href="/articles/page/<%= result.page + 1 %> ">Next >>>></a>
              <% } %>
            </div>
            <hr>
          </div>
          <hr>

      </div>
  </body>
  <%- include ("../../partials/footer.ejs") %>